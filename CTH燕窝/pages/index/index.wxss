.swiper swiper {
  width: 750rpx;
  height: 1136rpx;
  margin-bottom: 20rpx;
}
.swiper swiper swiper-item navigator image {
  height: 100%;
  width: 100%;
}
.list {
  display: flex;
  padding: 20rpx;
}
.list .left {
  flex: 4;
}
.list .left image {
  border-radius: 25rpx;
}
.list .right {
  flex: 6;
  padding-left: 20rpx;
}
.list .right image {
  border-radius: 25rpx;
}
.xq {
  margin-bottom: 10rpx;
}
.xq navigator {
  padding: 15rpx 20rpx;
}
.xq navigator image {
  border-radius: 25rpx;
}
.goods {
  margin-bottom: 30rpx;
}
.goods .goodsitem {
  background-color: var(--themecolor);
  display: flex;
  justify-content: space-around;
  border-radius: 25rpx;
  margin: 0 20rpx;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}
.goods .goodsitem .goods1 {
  flex: 1;
  margin-top: 25rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 0 0 20rpx 20rpx;
  padding-bottom: 5rpx;
}
.goods .goodsitem .goods1 image {
  width: 325rpx;
}
.goods .goodsitem .goods1 .goodsname {
  text-align: center;
  font-weight: 600;
  letter-spacing: 3rpx;
  margin: 15rpx 0;
}
.goods .goodsitem .goods1 .goodstext {
  text-align: center;
  font-size: 28rpx;
  letter-spacing: 8rpx;
  margin: 15rpx 0;
}
.goods .goodsitem .goods1 .goodspriceitem {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
}
.goods .goodsitem .goods1 .goodspriceitem .priceleft {
  font-size: 32rpx;
  font-weight: 600;
}
.goods .goodsitem .goods1 .goodspriceitem .priceright {
  font-size: 20rpx;
  background-color: var(--themecolor);
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
